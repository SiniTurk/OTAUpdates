<resources>

    <!-- DARK THEME GOES HERE -->
        <style name="AppTheme_Dark" parent="Theme.AppCompat">
            <item name="colorPrimary">@color/colorSecond</item>
            <item name="colorPrimaryDark">@color/lightGrey</item>
            <item name="colorAccent">@color/colorSecond</item>
            <item name="android:navigationBarColor">@color/lightGrey</item>

            <item name="no_list_item">@drawable/not_available_white</item>

            <item name="actionBarStyle">@style/Widget.Dark.ActionBar</item>
        </style>

        <style name="Widget.Dark.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
            <item name="background">@drawable/ab_bg_dark</item>
        </style>

        <style name="DarkActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
            <item name="android:textColor">#fff</item>
        </style>

    <!-- END OF DARK THEME -->

    <!-- LIGHT THEME GOES HERE -->

        <style name="AppTheme_Light" parent="Theme.AppCompat.Light">
            <!-- Customize your theme here. -->
            <item name="colorPrimaryDark">@color/colorFirst</item>
            <item name="colorPrimary">@color/colorSecond</item>
            <item name="colorAccent">@color/colorSecond</item>
            <item name="android:navigationBarColor">@color/colorSecond</item>

            <item name="no_list_item">@drawable/not_available_black</item>

            <item name="actionBarStyle">@style/Widget.Light.ActionBar</item>
        </style>

        <style name="Widget.Light.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
            <item name="titleTextStyle">@style/LightActionBarTitleText</item>
            <item name="background">@drawable/ab_bg_light</item>
        </style>

        <style name="LightActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
            <item name="android:textColor">#fff</item>
        </style>

    <!-- END OF LIGHT THEME -->

    <!-- DARK SETTINGS THEME GOES HERE -->

    <style name="SettingsTheme_Dark" parent="@android:style/Theme.Material">
        <item name="android:colorPrimary">@color/lightGrey</item>
        <item name="android:colorPrimaryDark">@color/lightGrey</item>
        <item name="android:colorAccent">@color/colorSecond</item>
        <item name="android:navigationBarColor">@color/lightGrey</item>
        <item name="android:navigationIcon">@drawable/back_24</item>
    </style>

    <!-- END OF DARK SETTINGS THEME -->

    <!-- LIGHT SETTINGS THEME GOES HERE -->

    <style name="SettingsTheme_Light" parent="@android:style/Theme.Material.Light">
        <item name="android:colorPrimaryDark">@color/colorFirst</item>
        <item name="android:colorPrimary">@color/colorSecond</item>
        <item name="android:colorAccent">@color/colorSecond</item>
        <item name="android:navigationBarColor">@color/colorSecond</item>
        <item name="android:navigationIcon">@drawable/back_24</item>
    </style>

    <!-- END OF LIGHT SETTINGS THEME -->

    <!-- DARK DIALOG GOES HERE -->
    <style name="SettingsTheme_Dark_Dialog" parent="Theme.AppCompat.Dialog.Alert"/>
    <!-- END OF DARK DIALOG THEME -->

    <!-- LIGHT DIALOG GOES HERE -->
    <style name="SettingsTheme_Light_Dialog" parent="Theme.AppCompat.Light.Dialog.Alert"/>
    <!-- END OF LIGHT DIALOG THEME -->

</resources>